  </welcome-file-list> -->
  
  <display-name>mvcFruit</display-name>
  
  	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/application-config.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
  
  <!-- ※ Spring MVC Framework 등록 -->
  <!--   →  Front Controller 등록  -->
  <!--   →  DispatcherServlet 객체 등록 -->
 
  <servlet>
		<servlet-name>dispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/mvc-config.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
  
  <servlet-mapping>
  	<servlet-name>dispatcher</servlet-name>
  	<url-pattern>/</url-pattern> <!-- 메인컨트롤러 이기 때문에 그냥 어떤 요청이던 action 이면~ 다 수행 -->
  </servlet-mapping>
  
  <!-- 인코딩 필터 등록 → CharacterEncodingFilter -->
  <!-- ○ 한글 인코딩 처리를 위한 필터 클래스 등록 ~  -->
 <filter>
 	<filter-name>encodingFilter</filter-name>
 	<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
 	
 	<!-- 필터에 파라미터 초기값 지정 -->
 	<init-param>
 		<param-name>encoding</param-name> <!-- 이부분은 고대로 똑같이 써야함 -->
 		<param-value>UTF-8</param-value>
 	</init-param>
 	
 </filter>
 
 <filter-mapping>
 	<filter-name>encodingFilter</filter-name>
 	<url-pattern>/*</url-pattern>
 </filter-mapping>
  
</web-app>
